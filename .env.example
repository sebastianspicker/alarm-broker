# Core
DATABASE_URL=postgresql+asyncpg://alarm:change-me@postgres:5432/alarm
REDIS_URL=redis://redis:6379/0
BASE_URL=http://localhost:8080
LOG_LEVEL=INFO

# Yealink inbound
YELK_TOKEN_QUERY_PARAM=token
# Optional: comma-separated IPs/CIDRs. Empty disables allowlist.
YELK_IP_ALLOWLIST=

# Rate limiting (per device token, per minute)
RATE_LIMIT_PER_MINUTE=10

# Admin
ADMIN_API_KEY=change-me-admin-key
ENABLE_API_DOCS=false

# Trusted reverse proxies for X-Forwarded-For (comma-separated CIDRs; empty disables trust)
TRUSTED_PROXY_CIDRS=

# Zammad
ZAMMAD_BASE_URL=https://zammad.example.org
ZAMMAD_API_TOKEN=
ZAMMAD_GROUP=Emergency Desk
ZAMMAD_PRIORITY_ID_P0=3
ZAMMAD_STATE_ID_NEW=1
ZAMMAD_CUSTOMER=guess:alarm-system@eure-domain.de

# SMS (SendXMS - provider specific; adjust endpoint to your provider API)
SENDXMS_ENABLED=false
SENDXMS_BASE_URL=https://api.sendxms.tld
SENDXMS_API_KEY=change-me
SENDXMS_FROM=Alarm
# Optional: path/mode for your provider
SENDXMS_SEND_PATH=/send
SENDXMS_MODE=json

# Signal
SIGNAL_ENABLED=false
SIGNAL_CLI_ENDPOINT=http://signal-cli:8080
SIGNAL_TARGET_GROUP_ID=change-me

# Escalation timings (seconds) â€“ used for default seed/policy
ESCALATE_T1=60
ESCALATE_T2=180
ESCALATE_T3=300
